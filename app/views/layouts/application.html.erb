<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav>

      <% if user_signed_in? %>
      <h1><%= link_to "Facebook-clone", user_posts_path(current_user) %></h1>      
      <ul>
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "All Users", users_path() %></li>
          <li><%= link_to "My Post", user_posts_path(current_user) %></li>
          <li><%= link_to "Notifications", notification_user_friendship_index_path(current_user) %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      </ul>
      <% else %>
      <h1><%= link_to "Facebook-clone", root_path() %></h1>
      <% end %>
    </nav>
      <% flash.each do |name, message| %>
      <p class='alert <%= "#{name}" %>'><i><%= "#{message}" %></i></p>
    <% end %>

    <%= yield %>
  </body>
</html>
